<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryColor"
    tools:context=".presentation.Account.LogInAccountFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life"
            android:textColor="@color/white"
            android:textSize="@dimen/size_name_app"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hack"
            android:textColor="@color/white"
            android:textSize="@dimen/size_name_app"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="30sp"
        android:background="@drawable/layout_register"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth"
            android:textColor="@color/secondColor"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:background="@drawable/input_edit"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20sp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Почта:"
                android:maxLines="1"
                android:id="@+id/email"
                android:background="@drawable/input_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20sp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconCheckable="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Пароль:"
                android:maxLines="1"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:background="@drawable/input_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/auth"
            android:layout_width="match_parent"
            android:layout_marginTop="40sp"
            android:layout_height="50sp"
            android:gravity="center"
            android:background="@drawable/button">

            <TextView
                android:id="@+id/authText"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:text="@string/enter_account"/>

            <ProgressBar
                android:id="@+id/authProgress"
                android:visibility="gone"
                android:layout_width="35sp"
                android:layout_height="35sp"/>

        </LinearLayout>



        <TextView
            android:id="@+id/registerUser"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="@string/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>